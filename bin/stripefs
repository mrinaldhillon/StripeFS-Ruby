require_relative '../lib/stripefs'
# Command line utility to mount StripeFS FileSystem
#
#	@author Mrinal Dhillon
#	@example
#		bin/stripefs /mnt/stripefs -s ~/stripes/1 -s ~/stripes/2 -s ~/stripes/3 -c 4096
StripeFS::CMD.mount(ARGV)
